@model MyGameScore.Models.Home.LancarPontosModel
@using (Html.BeginForm())
{
    <div class="col-8">
        <h1 class="mb-4">Lançar Pontos</h1>
        <div class="form-group mb-4">
            @Html.LabelFor(model => model.GameDate)
            @Html.EditorFor(model => model.GameDate,  new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div class="form-group mb-4">
            @Html.LabelFor(model => model.Score)
            @Html.EditorFor(model => model.Score,  new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <div>
            <input class="btn-primary" type="submit" value="Salvar" />
        </div>
    </div>

}

